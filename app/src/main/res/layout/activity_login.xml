<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg_view"
    tools:context=".LoginActivity">

    <View
        android:id="@+id/view"
        android:layout_width="309dp"
        android:layout_height="640dp"
        android:background="@drawable/rounded_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="207dp"
        android:layout_height="70dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="#1F1F1F"
        android:text="Sign In"
        android:textColor="#D9D9D9"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/passwordFieldLogIn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="258dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="CUESTIONARIO REMASTERED"
        android:textColor="#D9D9D9"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="203dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:text="Ingrese sus credenciales o registrese:"
        android:textColor="#D9D9D9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.245"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/userFieldLogIn"
        android:layout_width="252dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_corner_text_area"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#494949"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/passwordFieldLogIn"
        android:layout_width="252dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_corner_text_area"
        android:ems="10"
        android:hint="****"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#494949"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.456"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/userFieldLogIn" />

    <Button
        android:id="@+id/btnLogIn"
        android:layout_width="207dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#1F1F1F"
        android:text="Log In"
        android:textColor="#D9D9D9"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/passwordFieldLogIn" />
</androidx.constraintlayout.widget.ConstraintLayout>